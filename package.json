{
  "name": "sokos-utbetalingsportalen",
  "version": "1.0.0",
  "description": "Utbetalingsportalen container",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/utbetalingsportalen/ --outDir dist",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "author": "navikt",
  "license": "MIT",
  "dependencies": {
    "@grafana/faro-web-sdk": "^1.7.2",
    "@navikt/aksel-icons": "^6.8.0",
    "@navikt/ds-css": "^6.7.1",
    "@navikt/ds-react": "^6.7.1",
    "axios": "^1.6.8",
    "react-error-boundary": "^4.0.13",
    "react-router-dom": "^6.23.1",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@eik/rollup-plugin": "^4.0.63",
    "@eslint/js": "^9.2.0",
    "@navikt/aksel-stylelint": "^6.7.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stylelint": "^16.5.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.11",
    "vite-plugin-mock": "^3.0.2"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "@navikt/aksel-stylelint/recommended"
    ],
    "rules": {
      "selector-class-pattern": null
    }
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
      {
        "files": "**/*.module.css",
        "options": {
          "tailwindConfig": "tailwind.config.cjs",
          "plugins": [
            "@trivago/prettier-plugin-sort-imports",
            "prettier-plugin-tailwindcss"
          ]
        }
      },
      {
        "files": "**/*.css",
        "options": {
          "printWidth": 130
        }
      }
    ],
    "importOrder": [
      "^@navikt/(.*)$",
      "^@/(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.css": "stylelint",
    "*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=8"
  }
}
