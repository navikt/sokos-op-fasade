{
  "name": "sokos-utbetalingsportalen",
  "version": "1.0.0",
  "description": "Utbetalingsportalen",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/utbetalingsportalen/ --outDir dist",
    "build:gh-pages": "vite build --mode=dev-ekstern --base=/sokos-utbetalingsportalen/",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "author": "navikt",
  "license": "MIT",
  "dependencies": {
    "@grafana/faro-web-sdk": "^1.5.1",
    "@navikt/aksel-icons": "^6.5.0",
    "@navikt/ds-css": "^6.5.0",
    "@navikt/ds-react": "^6.5.0",
    "axios": "^1.6.8",
    "react-error-boundary": "^4.0.13",
    "react-router-dom": "^6.22.3",
    "swr": "^2.2.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eik/rollup-plugin": "^4.0.63",
    "@eslint/js": "^9.2.0",
    "@navikt/aksel-stylelint": "^6.5.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.2.78",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^16.3.1",
    "stylelint-config-recommended": "^14.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.8",
    "vite-plugin-mock": "^3.0.1"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "@navikt/aksel-stylelint/recommended"
    ]
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^@navikt/(.*)$",
      "^@/(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.jsx": "eslint",
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.css": "stylelint",
    "*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=8"
  }
}
